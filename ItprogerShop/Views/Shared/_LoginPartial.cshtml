@using Microsoft.AspNetCore.Identity
@using ItprogerShop.Areas.Identity.Data

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <a id="manage" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Привет, @UserManager.GetUserName(User)!</a>
    <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
        <button id="logout" type="submit">Выход</button>
    </form>
}
else
{
    <a id="register" asp-area="Identity" asp-page="/Account/Register">Регистрация</a>
    <a id="login" asp-area="Identity" asp-page="/Account/Login">Войти</a>
}
