<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Интернет-магазин</title>
    <link rel="stylesheet" href="~/css/site.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>

<body>
    <header>
        <span class="logo">Best Shop</span>
        <nav>
         <a href="/">Главная</a>
         <a href="/home/about">Про нас</a>
         <a href="/blog">Блог</a>
         <a href="/blog/add">Добавить пост</a>
         <partial name="_LoginPartial" />
        </nav>
    </header>

    <nav>
        <a href="/">Всё</a>
        <a href="/home/tshirts">Футболки</a>
        <a href="/home/sweaters">Худи</a>
        <a href="/home/cups">Кружки</a>
        <a href="/home/bags">Сумки</a>
    </nav>

    <h1 class="main_title">@ViewData["H1"]</h1>
    <main class="items postForm">
        @RenderBody()
    </main>

    <a href="/cart"><button class="shop-cart-button"><i class="fas fa-shopping-cart"></i></button></a>
    
    <footer>Все права защищены &copy;</footer>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>